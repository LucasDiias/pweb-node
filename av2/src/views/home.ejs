<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
  </head>
  <body>
    <h1>Biblioteca</h1>
    <button onclick="window.location.href='/cadastro'">Cadastrar Livro</button>
    <table>
      <thead>
        <th>id</th>
        <th>Nome</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <% livros.forEach((livro) => { %>
        <tr>
          <td><%= livro.id %></td>
          <td><%= livro.titulo %></td>
          <td>
            <button onclick="window.location.href='/editar/<%= livro.id %>'">
              Editar
            </button>
          </td>
          <td>
            <form action="/livros/<%= livro.id %>?_method=DELETE" method="post">
              <button type="submit">Excluir</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
