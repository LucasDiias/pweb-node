<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Alunos</h1>
    <a href="/aluno">Cadastrar Aluno</a>
    <form action="">
      <thead>
        <tr>
          <th>Matr√≠cula</th>
          <th>Nome</th>
          <th>Data de Nascimento</th>
          <th>Status</th>
          <th>E-mail</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% alunos.forEach((aluno) => { %>
        <tr>
          <td><%= aluno.matricula %></td>
          <td><%= aluno.nome %></td>
          <td><%= aluno.dataNasc %></td>
          <td><%= aluno.status %></td>
          <td><%= aluno.email %></td>
          <td>
            <button
              onclick="window.location.href='aluno?matricula=<%= aluno.matricula %>'"
            >
              Editar
            </button>
          </td>
          <td>
            <button onclick="del('<%= aluno.matricula %>')">Excluir</button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </form>
  </body>
</html>
